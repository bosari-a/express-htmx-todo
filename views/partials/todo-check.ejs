<input
  autocomplete="off"
  hx-patch="/todos"
  hx-vals="js:{done:event.target.checked,_id:'<%= todo._id.toString() %>'}"
  class="peer"
  type="checkbox"
  name="done"
  _="on load if <%= todo.done %> set my.checked to true end
  on load if my.checked hide <div:nth-child(1)/> in .todo-icons in closest parent <div/> else
  show <div:nth-child(1)/> in .todo-icons in closest parent <div/> end
  on click toggle *display of <div:nth-child(1)/> in .todo-icons in closest parent <div/> end"
/>
