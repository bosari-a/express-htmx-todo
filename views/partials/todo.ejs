<div class="todo">
  <input
    class="peer"
    type="checkbox"
    name="done"
    _="on load if <%- todo.done %> set my.checked to true else set my.checked to false end
    on load if my.checked hide <div:nth-child(1)/> in .todo-icons in closest parent <div/> else
      show <div:nth-child(1)/> in .todo-icons in closest parent <div/> end
      on click toggle *display of <div:nth-child(1)/> in .todo-icons in closest parent <div/> end"
  />
  <div
    class="peer-checked:bg-emerald-400 peer-checked:text-gray-200 peer-checked:line-through"
  >
    <span><%= todo.todo %></span>
    <div class="todo-icons">
      <div>
        <img src="/assets/editpenicon.svg" alt="edit pen icon svg image" />
      </div>
      <div>
        <img src="/assets/deletetrashcan.svg" alt="trash can icon svg image" />
      </div>
    </div>
  </div>
</div>
